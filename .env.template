# 'development' or 'production'
NODE_ENV === 'development',

# Authentication
AUTH_SECRET=your-secret-key-minimum-32-chars
AUTH_URL=http://localhost:3000

# App URLs
PASSWORD_RESET_TOKEN_EXPIRY=3600  # in seconds (1 hour)
PASSWORD_RESET_SECRET=your-secret-key-for-password-reset-tokens
APP_URL=http://localhost:3000  # Your app's base URL for generating reset links

# Database
# Generate migration files                    pnpm db:generate
# Apply migrations                            pnpm db:migrate
# Quick development (skips migration files)   pnpm db:push
DATABASE_URL=postgresql://your-username:your-password@localhost:5432/your-database-name

# Optional: Upstash Redis
# UPSTASH_REDIS_URL=
# UPSTASH_REDIS_TOKEN=

# Optional: Email configuration
# EMAIL_SERVER_HOST=smtp.example.com
# EMAIL_SERVER_PORT=587
# EMAIL_SERVER_USER=user@example.com
# EMAIL_SERVER_PASSWORD=password
# EMAIL_FROM=no-reply@example.com 

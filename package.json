{
    "name": "temp-next-project",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "lint:fix": "next lint --fix",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
        "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
        "db:studio": "drizzle-kit studio --config=./src/lib/drizzle/config.ts",
        "db:generate": "drizzle-kit generate --config=./src/lib/drizzle/config.ts",
        "db:push": "drizzle-kit push --config=./src/lib/drizzle/config.ts",
        "db:migrate": "dotenv -- tsx src/lib/drizzle/migrate.ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "prepare": "husky",
        "clean": "rm -rf .next node_modules/.cache .turbo && pnpm jest --clearCache"
    },
    "dependencies": {

        "postgres": "^3.4.5",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-hook-form": "^7.56.1",
        "react-hot-toast": "^2.5.2",
        "uuid": "^11.1.0",
        "zod": "^3.24.3",
        "zustand": "^5.0.3"
    },
